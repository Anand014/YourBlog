<%- include("partials/header"); %>

<form action="/posts/<%= deletePostId %>?_method=DELETE" method="POST">
  <h1><%=title%></h1>
  <p><%=content%></p>
  <button
    class="btn btn-sm btn-outline-danger"
    name="button"
    value="<%=title%>"
    type="submit"
  >
    Delete this post
  </button>
</form>

